<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
        <!-- MYSQL -->
        <property name="database">mysql</property>
        <property name="schema">jingbo_0727</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://study.rui.ubuntu:3306/jingbo_0727?useUnicode=true&amp;characterEncoding=utf-8&amp;useSSL=false</property>
        <property name="connection.username">root</property>
        <property name="connection.password">password</property>
        <property name="dialect">org.hibernate.dialect.MySQL55Dialect</property>
        <!-- ORACLE -->
<!--        <property name="database">oracle</property>-->
<!--        <property name="connection.driver_class">oracle.jdbc.driver.OracleDriver</property>-->
<!--        <property name="connection.url">jdbc:oracle:thin:@192.168.2.189:1521:oracle12</property>-->
<!--        <property name="connection.username">yaowr</property>-->
<!--        <property name="connection.password">yaowr</property>-->
<!--        <property name="dialect">org.hibernate.dialect.Oracle12cDialect</property>-->

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">10</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">false</property>

        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">update</property>

        <!-- 驼峰命名，也可以在启动Hibernate时显示指定 -->
<!--        <property name="hibernate.physical_naming_strategy">com.landray.repair.conf.AcmePhysicalNamingStrategy</property>-->

        <!-- Names the annotated entity class -->
        <mapping class="com.landray.notify.update.model.SourceApp"/>
        <mapping class="com.landray.notify.update.model.SourceModule"/>
        <mapping class="com.landray.notify.update.model.SourceAppModule"/>

<!--        <mapping resource="config/hbm/SourceAppModule.hbm.xml" />-->

    </session-factory>

</hibernate-configuration>